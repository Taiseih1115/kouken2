<%= stylesheet_link_tag 'new', :media => "all" %>
<h1>広告学研究会</h1>
<h3>新規投稿ページ</h3>
<%= form_for @kouken do |f| %>
  <div class="post-container">
  <p class="title">投稿フォーム</p>
  <%= f.label :投稿内容 %>
      
  </div>

 <div class="field">
    <%= f.label :タイトル %>
    <%= f.text_field :title, :size => 30 %>
  </div>
 
  <div class="field">
 <%= f.label :youtube_url %>
 <%= f.text_field :youtube_url, :size => 30 %>
</div>

<div class="field">
<%= f.label :写真 %>
<%= f.file_field :image %>
</div>


  <div class="field">
    <%= f.label :活動内容  %>
    <%= f.select :tag, 
    [["A", "A"], 
    ["B", "B"], 
    ["C", "C"]], include_blank: "選択して下さい" %>
  </div>

<div class="field">
    <%= f.label :本文  %>
    <%= f.text_area :main, :size => "30x2" %>
  </div>

  <div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
    </div>

  <div class="time">
    <%= f.label :start_time %>
    <%= f.datetime_select :start_time %>
  </div>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", koukens_path %>



